<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickMon"
            android:text="Понедельник" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickTue"
            android:text="Вторник" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickWed"
            android:text="Среда" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickThu"
            android:text="Четверг" />

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickFri"
            android:text="Пятница" />

        <Button
            android:id="@+id/button15"
            android:layout_width="421dp"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickSat"
            android:text="Суббота" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>