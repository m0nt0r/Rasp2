<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="44dp">

        <ScrollView
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edWeek"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Para(1 - первая и так далее)"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edDay"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Week"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edTime"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Day(1 - Понедельник, 2 - Вторник и т.д.)"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edpodgrup"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Time(время начало и конца пары)"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edprep"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="podgrup(1 - первая, 2 - вторая)"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edcab"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Prepod"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edpara"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Cabinet"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edgrup"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Grupa(сейчас 1 - МС, 2 - Э)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edkurs"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Kurs"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edpredmet"
                    android:layout_width="408dp"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Predmet"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:onClick="onClickSave"
                    android:text="Save" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>